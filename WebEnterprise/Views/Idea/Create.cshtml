@model WebEnterprise.Models.Idea

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>
    <form action="" method="post" enctype="multipart/form-data" class="decor short w-50 h-25 mx-auto">
        <div class="form-inner">
            <h1>Posts</h1>
            <input asp-for="Title" placeholder="Title..." class="focus" rows="1">
            <textarea asp-for="Content" placeholder="Content..." class="focus" rows="3"></textarea>
            <div class="col-md-3 mb-3">
              <label for="validationCustom04">Category</label>
                @Html.DropDownListFor(m => m.CategoryID,
                                  (IEnumerable<SelectListItem>)ViewBag.categories)
            </div>
             <label asp-for="Documment" class="control-label"></label>
            <input type="file" multiple asp-for="Documment" name = "postedFile" placeholder="Name Documment." class="focus" rows="1">
            <span asp-validation-for="Documment" class="text-danger"></span>
            <button type="submit">Post</button>
        </div>
    </form>
    
</body>


<div class="pt-5">
    <button type="button" class="btn btn-dark"><a asp-action="Index" class="text-decoration-none">Back To list idea</a></button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
