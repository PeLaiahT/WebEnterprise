@model WebEnterprise.Models.Idea

@{
    ViewData["Title"] = "Detail";
}

<h1>Detail</h1>

<div>
    <h4>Idea</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreateAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.View)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.View)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.NameCategory)
        </dd>
    </dl>
</div>
<div class="col-sm-9 padding-right">
    <label>Like</label>
    <lable>@ViewBag.likes</lable>
</div>
@using (Html.BeginForm("UpLike", "Like", FormMethod.Post))
{
    @Html.Hidden("IdeaID", Model.IdeaID)
    <input type="submit" value="Like" />
}
@using (Html.BeginForm("DownLike", "Like", FormMethod.Post))
{
    @Html.Hidden("IdeaID", Model.IdeaID)
    <input type="submit" value="DisLike" />
}

<div class="col-sm-9 padding-right">
    <h2>Comments</h2>
    @using (Html.BeginForm("Create", "Comment", FormMethod.Post))
    {
        @Html.TextArea("NoiDung")
        @Html.Hidden("IdeaID", Model.IdeaID)
        <input type="submit" value="Post" />
    }
</div>
<div>
    @foreach (var comment in Model.Comments)
    {
        <div class="col-sm-9 padding-right">
            <div>
                @comment.User.FullName
            </div>
            <div>
                @comment.Content
            </div>
        </div>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdeaID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
