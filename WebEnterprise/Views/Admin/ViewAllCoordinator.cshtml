@model IEnumerable<WebEnterprise.Models.DTO.CustomUserDTO>

@{
    ViewData["Title"] = "ViewAllCoordinator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid w-100">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 d-flex justify-content-between align-items-center">
                            <h3 class="m-0 font-weight-bold text-primary">Coordinator</h3>
                            <button type="button" class="btn btn-secondary"><a asp-action="CreateCoor" class="text-decoration-none text-white">Create new Coordinator</a></button>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th class="text-center">
                                                @Html.DisplayNameFor(model => model.UserName)
                                            </th>
                                            <th class="text-center">
                                                @Html.DisplayNameFor(model => model.FullName)
                                            </th>
                                            <th class="text-center">
                                                @Html.DisplayNameFor(model => model.Email)
                                            </th>
                                            <th class="text-center">
                                                @Html.DisplayNameFor(model => model.PhoneNumber)
                                            </th>
                                            <th></th>
                                            
                                        </tr>
                                    </thead>
                                    
                                    <tbody>
                                        @foreach (var item in Model) {
                                                string imgSrc = null;
                                                //if the current product has image
                                                if (item.Image != null)
                                                {
                                                    var base64 = Convert.ToBase64String(item.Image);
                                                    imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                                }
                                                <tr>
                                                    <td class="text-center">
                                                        @Html.DisplayFor(modelItem => item.UserName)
                                                    </td>
                                                    <td class="text-center">
                                                        @Html.DisplayFor(modelItem => item.FullName)
                                                    </td>
                                                    <td class="text-center">
                                                        @Html.DisplayFor(modelItem => item.Email)
                                                    </td>
                                                    <td class="text-center">
                                                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                                                    </td>
                                                     <td><img class="reference-thumb" src="~/Img/@item.Image" /></td>
                                                    <td class="text-center">
                                                        <button type="button" class="btn btn-info"><a asp-action="EditCoor" asp-route-id="@item.Id" class="text-decoration-none text-white">Edit</a></button>
                                                        
             
                                                         <button type="button" class="btn btn-danger"><a asp-action="DeleteCoor" asp-route-id="@item.Id" class="text-decoration-none text-white">Delete</a></button></td>
                                                    
                                                </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
</div>
           