@model IEnumerable<WebEnterprise.Models.Department>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid w-75">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 d-flex justify-content-between align-items-center">
                            <h3 class="m-0 font-weight-bold text-primary">View Department</h3>
                            <button type="button" class="btn btn-secondary"><a asp-action="Create" class="text-decoration-none text-white">Create new Department</a></button>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th class="text-center">
                                                @Html.DisplayNameFor(model => model.NameDepartment)
                                            </th>
                                            <th class="text-center">
                                                @Html.DisplayNameFor(model => model.Description)
                                            </th>
                                            <th class="text-center">
                                                Action
                                            </th>
                                            
                                            
                                        </tr>
                                    </thead>
                                    
                                    <tbody>
                                        @foreach (var item in Model) {
                                                <tr>
                                                    <td class="text-center">
                                                        @Html.DisplayFor(modelItem => item.NameDepartment)
                                                    </td>
                                                    <td class="text-center">
                                                        @Html.DisplayFor(modelItem => item.Description)
                                                    </td>
                                                    <td class="text-center">
                                                        
                                                        <button type="button" class="btn btn-info"><a asp-action="Edit" asp-route-id="@item.DepartmentID" class="text-decoration-none text-white">Edit</a></button>
                                                        
             
                                                         <button type="button" class="btn btn-danger"><a asp-action="Delete" asp-route-id="@item.DepartmentID" class="text-decoration-none text-white">Delete</a></button>
                                                    </td>
                                                    
                                                </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
</div>  
