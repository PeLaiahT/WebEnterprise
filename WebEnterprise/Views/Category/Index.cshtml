@model IEnumerable<WebEnterprise.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="left-sidebar d-flex justify-content-end">
        <div>
            <button type="button" class="btn btn-primary"><a asp-action="Create" class="text-decoration-none text-white">Create a new Category</a></button>
        </div>
    </div>

@foreach (var item in Model) {
    <div class="card border-dark mb-3" style="max-width: 18rem;">
  <div class="card-header">Categories</div>
  <div class="card-body text-dark">
    <h5 class="card-title">@Html.DisplayFor(modelItem => item.NameCategory)</h5>
    <p class="card-text">@Html.DisplayFor(modelItem => item.Desciption)</p>
    <a asp-action="Update" asp-route-id="@item.CategoryID">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryID">Delete</a>
  </div>
  
</div>
       
}
    



