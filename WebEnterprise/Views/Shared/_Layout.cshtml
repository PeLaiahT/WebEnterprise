<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebEnterprise</title>
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebEnterprise.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/eedc9643f9.js" crossorigin="anonymous"></script>

</head>
<body>
    <nav>
        <div class="nav-left">
            <img class="logo rounded-circle" src="https://www.worldsquash2008.com/wp-content/uploads/2021/10/tai-sao-manchester-united-duoc-goi-la-quy-do-1.jpg" alt="">
        </div>
        <div class="nav-right">

            <div class="search-box">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="text" placeholder="Search">
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="left-sidebar">
            <div class="idea-links">
                <a href="#"><img src="https://vuihecungchocopie.vn/wp-content/uploads/2021/12/tieu-su-va-nghe-nghiep-chinh-khoa-pug.jpg" alt="">Most Popular Idea</a>
                <a href="#"><img src="https://vuihecungchocopie.vn/wp-content/uploads/2021/12/tieu-su-va-nghe-nghiep-chinh-khoa-pug.jpg" alt="">Most Viewer Idea</a>
                <a href="#"><img src="https://vuihecungchocopie.vn/wp-content/uploads/2021/12/tieu-su-va-nghe-nghiep-chinh-khoa-pug.jpg" alt="">Most Lastest Idea</a>
                <a asp-action="Create"><img src="https://vuihecungchocopie.vn/wp-content/uploads/2021/12/tieu-su-va-nghe-nghiep-chinh-khoa-pug.jpg" alt="">Create a new Idea</a>
            </div>
        </div>
        <div class="main-content">

            <div>
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

        </div>
        <div class="right-sidebar">

        </div>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - WebEnterprise - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
